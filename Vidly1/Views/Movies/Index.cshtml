@model IEnumerable<Vidly1.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2> @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
            <td>
                @using (Html.BeginForm("DeleteMovie", "Movies", new { id = movie.Id })) { 
                    <button type = "submit" class="btn btn-danger" 
                     onclick="return confirm('Are you sure you want to delete this movie with ID=@movie.Name');">Delete</button>}
                </td>
            </tr>
        }
    </tbody>
</table>

